# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# TypeScript and JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2

# CSS, SCSS, and related files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# Markdown files
[*.{md,mdx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Configuration files
[*.config.{js,ts}]
indent_style = space
indent_size = 2

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml,bun.lockb}]
indent_style = space
indent_size = 2

# Vite and build tool configs
[{vite.config.*,tailwind.config.*,postcss.config.*,eslint.config.*}]
indent_style = space
indent_size = 2